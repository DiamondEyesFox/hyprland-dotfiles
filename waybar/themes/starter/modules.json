{
    // Workspaces
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent-workspaces": {
             "*": 5
        }
    },

    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true
    },

    // Cliphist
    "custom/cliphist": {
        "format": "ÔÉ™",
        "on-click": "sleep 0.1 && ~/.config/waybar/scripts/cliphist.sh",
        "on-click-right": "sleep 0.1 && ~/.config/waybar/scripts/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/.config/waybar/scripts/cliphist.sh w",
        "tooltip": false
    },

    // Hypridle inhibitor
    "custom/hypridle": {
        "format": "ÔÄ£",
        "return-type": "json",
        "escape": true,
        "exec-on-event": true,
        "interval": 60,
        "exec": "~/.config/hypr/scripts/hypridle.sh status",
        "on-click": "~/.config/hypr/scripts/hypridle.sh toggle",
        "on-click-right": "hyprlock"
    },

    // Updates Count
    "custom/updates": {
        "format": "ÔÇ´ {}",
        "tooltip-format": "{}",
        "escape": true,
        "return-type": "json",
        "exec": "~/.config/ml4w/scripts/updates.sh",
        "restart-interval": 60,
        "on-click": "kitty ~/.config/ml4w/scripts/installupdates.sh",
        "tooltip": false
    },

    // Theme Starter Label
    "custom/starter": {
        "format": "THEME STARTER",
        "tooltip": false
    },

    // Wallpaper
    "custom/wallpaper": {
        "format": "ÔÄæ",
        "on-click": "waypaper",
        "on-click-right": "~/.config/hypr/scripts/wallpaper-effects.sh",
        "tooltip": false
    },

    // Waybar Themes
    "custom/waybarthemes": {
        "format": "ÔÖÅ",
        "on-click": "~/.config/waybar/themeswitcher.sh",
        "tooltip": false
    },

    // Settings
    "custom/settings": {
        "format": "ÔÄì",
        "on-click": "better-control",
        "tooltip": false
    },

    // Keybindings
    "custom/keybindings": {
        "format": "ÔÑú",
        "on-click": "~/.config/hypr/scripts/keybindings.sh",
        "tooltip": false
    },

    // Filemanager Launcher
    "custom/filemanager": {
        "format": "ÔÅª",
        "on-click": "nautilus",
        "tooltip": false
    },

    // Browser Launcher
    "custom/browser": {
        "format": "Ôãê",
        "on-click": "~/.config/ml4w/settings/browser.sh",
        "tooltip": false
    },

    // ML4W Welcome App
    "custom/ml4w-welcome": {
        "on-click": "flatpak run com.ml4w.sidebar",
        "on-click-right": "flatpak run com.ml4w.welcome",
        "format": " ",
        "tooltip-format": "Open Sidebar"
    },

    // ChatGPT Launcher
    "custom/chatgpt": {
        "format": "ÔÅô",
        "on-click": "chromium --app=https://chat.openai.com",
        "tooltip": false
    },

    // Rofi Application Launcher
    "custom/appmenu": {
        "format": "Apps",
        "on-click": "rofi -show drun -replace",
        "on-click-right": "~/.config/hypr/scripts/keybindings.sh",
        "tooltip": false
    },

    // Power Menu
    "custom/exit": {
        "format": "ÔÄë",
        "on-click": "wlogout",
        "tooltip": false
    },

    // Keyboard State
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },

    // Notification Center
    "custom/notification": {
        "format": "Û∞Çö",
        "on-click": "swaync-client -t",
        "on-click-right": "swaync-client -C",
        "tooltip": false
    },

    // System tray
    "tray": {
        "icon-size": 21,
        "spacing": 10,
        "show-passive-items": true,
        "reverse-direction": false
    },

    // Clock
    "clock": {
        "format": "{:%I:%M%p}",
        "on-click": "flatpak run com.ml4w.calendar",
        "tooltip-format": "{:%A, %B %d, %Y %I:%M:%S %p}",
        "tooltip": true
    },

    // System
    "custom/system": {
        "format": "Óë≥",
        "tooltip": false
    },

    // CPU
    "cpu": {
        "format": "/ C {usage}% ",
        "on-click": "kitty htop"
    },

    // Memory
    "memory": {
        "format": "/ M {}% ",
        "on-click": "kitty htop"
    },

    // Harddisc space used
    "disk": {
        "interval": 30,
        "format": "D {percentage_used}% ",
        "path": "/",
        "on-click": "kitty htop"
    },

    "hyprland/language": {
        "format": "/ K {short}"
    },

    // Group Hardware
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/system",
            "disk",
            "cpu",
            "memory",
            "hyprland/language"
        ]
    },

    // Group System Tools
    "group/system": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-system",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/cliphist"
        ]
    },

    // Group Settings
    "group/settings": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/settings",
            "custom/waybarthemes",
            "custom/wallpaper"
        ]
    },

    // Group Quicklinks
    "group/quicklinks": {
        "orientation": "horizontal",
        "modules": [
            "custom/filemanager",
            "custom/browser"
         ]
    },

    // Network Manager UI
    "custom/network_manager": {
        "format": "üì∂",
        "on-click": "notify-send 'Please provide the correct path to network_manager_ui'",
        "tooltip": "Network Manager"
    },

    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": "Û∞§®",
        "format-ethernet": "Ôûñ  {ipaddr}",
        "format-disconnected": "Not connected", //An empty format will hide the module.
        "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
        "tooltip-format-wifi": "Ôá´   {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "better-control"
    },

    // Battery
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôóß {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
    },

    // Media Player
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "",
            "plex": "",
            "web": "",
            "default": "‚ô™"
        },
        "escape": true,
        "exec": "~/.config/waybar/scripts/mediaplayer-enhanced.py",
        "interval": 2,
        "on-click": "~/.config/waybar/scripts/mediaplayer-enhanced.py 1",
        "on-click-right": "~/.config/waybar/scripts/mediaplayer-enhanced.py 3",
        "on-click-middle": "~/.config/waybar/scripts/mediaplayer-enhanced.py 2",
        "tooltip": true
    },

    // Pulseaudio
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon}",
        "format-bluetooth": "{icon}",
        "format-bluetooth-muted": "",
        "format-muted": "",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄ® ", "ÔÄ® "]
        },
        "on-click": "better-control",
        "on-click-right": "~/.config/waybar/scripts/volume-popup.sh"
    },

    // Bluetooth
    "bluetooth": {
        "format": "Û∞ÇØ",
        "format-disabled": "",
        "format-off": "",
        "interval": 30,
        "on-click": "better-control",
        "format-no-controller": "",
        "on-click-right": "~/.config/waybar/scripts/bluetooth-popup.sh"
    },

    // Other
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false,
    },

    // Idle Inhibator
    "idle_inhibitor": {
        "format": "{icon}",
        "tooltip": true,
        "format-icons":{
            "activated": "ÔèÅ",
            "deactivated": "ÔÄ£"
        },
        "on-click-right": "hyprlock"
    }
}
